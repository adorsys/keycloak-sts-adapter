			<directory>${project.build.directory}/jboss-modules</directory>
			<outputDirectory>modules/system/layers/base</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/cli</directory>
			<outputDirectory>cli</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
